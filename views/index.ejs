<link rel="stylesheet" href="/stylesheets/index.css">




<section class="banner">
  <h1 class="wow bounceInUp mb-5">List Of All Jobs</h1>
  <div class="search-box">
    <form action="/jobs" method="get">
      <input type="text" class="form-control input m-4" placeholder="Enter Company Name/ Job Category" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" name="search">
      <button type="submit" class="btn btn-info submit-button" value="search">Search</button>
    </form>
    
    <!-- <form action="/jobs" method="get">
      <input type="text" name="search">
      <input type="submit" value="search">
    </form> -->
  </div>
</section>
<a class="btn btn-danger" href="/jobs/new">Add a new job</a>


<div class="jobs-container p-5 me-0">
    <% for(let job of foundJobs){ %>
    <div class="card jobs-div mb-5">
        <div class="img-container mx-auto mt-5">
            <img src="<%= job.image %>" class=" mx-auto my-auto" alt="<%= job.name %>" style="width: 10rem; height: auto;"/>
        </div>
        <div class="card-body">
          <h3 class="card-title mt-3" style="text-align: center; color: var(--primary-100);"><%= job.name %></h3>
          <h5 class="card-title mt-3" style="text-align: center;"><%= job.category %></h5>
          <p class="card-text mt-4 mx-3" ><%= job.description %></p>
          <a href="/jobs/<%= job._id %>" class="btn my-3">Read More</a>
        </div>
    </div>
    <% } %>
    
</div>

